{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PgSql": "Host=localhost;Port=5432;Database=marg;Username=maxena;Password=CabinPwd",
    "logging": "Host=localhost;Port=5432;Database=marg-log;Username=maxena;Password=CabinPwd"
  },
  "ApiSettings": {
    "JwtSetting": {
      "SecretKey": "",
      "Issuer": "Margs-Development-Server",
      "Audience": "Margs-Development-Server",
      "ExpireInMinute": "1"
    }
  },
  "serilog": {
    "Using": [
      "Serilog.Sinks.PostgreSQL"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "PostgreSQL",
        "args": {
          "connectionString": "logging",
          "SchemaName": "marg-log",
          "tableName": "LogClient",
          "needsAutoCreateTable": true,
          "respectCase": true,
          "loggerColumnOptions": {
            "Id": "IdAutoIncrement",
            "Timestamp": "Timestamp",
            "Message": "Message",
            "Level": "LevelAsText",
            "RenderedMessage": "RenderedMessage",
            "Exception": "Exception",
            "Properties": "Properties"
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      },
      {
        "Name": "Console"
      }
    ]
  }
}

